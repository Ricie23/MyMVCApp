@model IEnumerable<MyMVCApp.Models.Stats>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoursPlayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsBeaten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrophiesEarned)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Games.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoursPlayed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsBeaten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrophiesEarned)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
